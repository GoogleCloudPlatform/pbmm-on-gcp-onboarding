config sys glo
set hostname passive
end
config system interface
    edit port1
        set mode static
        set ip ${passive_port1_ip}/${passive_port1_mask}
        # TCP port 8008
        set allowaccess probe-response
        set description "traffic external"
        set secondary-IP enable
        config secondaryip
          edit 1
            # set ip 34.95.42.166
            # todo: change name of the token as needed - public IP of the ELB fwd rule
            set ip ${external_loadbalancer_ip}
          next
        end
    next
    edit port2
        set mode static
        set ip ${passive_port2_ip}/${passive_port2_mask}
        # TCP port 8008
        set allowaccess probe-response
        set description "int"
        set secondary-IP enable
        config secondaryip
        edit 1
        set ip ${internal_loadbalancer_ip} 255.255.255.255
              # ??? why - ILB does not probe secondary IP
              # ??? set allowaccess probe-response
        next
        end
    next
    edit port3
        set mode static
        set ip ${passive_port3_ip}/${passive_port3_mask}
        # ??? Why - fgfm for HA-SYNC
        # set allowaccess ping https ssh http fgfm
        set allowaccess ping fgfm
        set description "sync"
    next
    edit port4
        set mode static
        set ip ${passive_port4_ip}/${passive_port4_mask}
        set allowaccess ping https ssh http fgfm
        set description "mgmt"
    next
    edit "loopback"
        set vdom "root"
        set ip 192.168.199.1 255.255.255.255
        set allowaccess ping probe-response
        set type loopback
        set role lan
    next
end
config system ha
    set group-name "group1"
    set mode a-p
    set hbdev "port3" 50
    set session-pickup enable
    set ha-mgmt-status enable
    config ha-mgmt-interfaces
        edit 1
            set interface "port4"
            set gateway ${mgmt_gateway_ip}
        next
    end
    set override enable
    set priority 100
    set unicast-hb enable
    set unicast-hb-peerip ${active_hb_ip}
    set unicast-hb-netmask ${hb_netmask}
end
config firewall address
    edit "ADDR-PROD-PUB"
        set type ipmask
        set comment 'Prod public subnet'
        set associated-interface ''
        set color 0
        set allow-routing disable
        set fabric-object disable
        # set subnet 10.2.16.0 255.255.240.0
        # TODO : adjust token name as needed
        set subnet ${PROD_PUB_SNET_RANGE}
    next
    edit "ADDR-PROD-APP"
        set type ipmask
        set comment 'Prod app subnet'
        set associated-interface ''
        set color 0
        set allow-routing disable
        set fabric-object disable
        # set subnet 10.2.64.0 255.255.240.0
        # TODO : adjust token name as needed
        set subnet ${PROD_APP_SNET_RANGE}
    next
    edit "ADDR-PROD-DATA"
        set type ipmask
        set comment 'Prod data subnet'
